{
  "manifest_version": 3,
  "name": "Reels Counter",
  "version": "1.2",
  "description": "Counts how many Instagram Reels you've watched",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reels Weekly Count"
  }
}
